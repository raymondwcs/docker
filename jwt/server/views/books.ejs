<!DOCTYPE html>
<html lang="en">

<head>
    <title>Books</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>

    <div class="container">
        <div class="row justify-content-center align-items-center">
            <h2>Books</h2>
        </div>
        <div class="row justify-content-center align-items-center">
            <h6>{User: <%= userInfo.username %> (<%= userInfo.userrole %>)}</h2>
        </div>
        <br>
        <div class="card-columns">
            <% for (let i=0; i < books.length; i++) { %>
                <div class="card bg-light">
                    <div class="card-header text-center">
                        <h4 class="card-title">
                            <%= books[i].title %>
                        </h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text"><strong>Author</strong>
                            <%= books[i].author %>
                        </p>
                        <p class="card-text"><strong>Country</strong>
                            <%= books[i].country %>
                        </p>
                        <p class="card-text"><strong>Language</strong>
                            <%= books[i].language %>
                        </p>
                        <p class="card-text"><strong>Year</strong>
                            <%= books[i].year %>
                        </p>
                        <p class="card-text"><strong>Pages</strong>
                            <%= books[i].pages %>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>
        <br>
        <% if (userInfo.userrole == "admin") { %>
        <div class="row justify-content-center align-items-center">
            <a href="/create" alt="Add a new book"><svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg></a>
        </div>
        <br>
        <% } %>
        <div class="row justify-content-center align-items-center">
            <a href="/logout">Logout</a>
        </div>
    </div>

</body>

</html>